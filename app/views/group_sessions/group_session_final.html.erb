<h1>For the following items, select a number between 1 and 6 using the sliders below</h1>

<%= form_for group_session_mood_detail, url: update_path, :html => {:role => "form", :style => "margin-bottom:20px;background-color:white;padding:30px;border-radius:5px;"} do |f| %>

  <div class="form-group">
    <div class="row form-labels">
      <div class="col-md-3 col-md-offset-3"><span class="form-label-text">Not at all</span></div>
      <div class="col-md-6"><span class="form-label-text">Very much</span></div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= f.label :session_satisfaction, "Your satisfaction with this group session" %>
      </div>
      <div class="col-md-9">
        <%= f.range_field :session_satisfaction, :in => 1..6, :step => '.1' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= f.label :session_desire_for_future, "Your desire to return for the next session" %>
      </div>
      <div class="col-md-9">
        <%= f.range_field :session_desire_for_future, :in => 1..6, :step => '.1' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= f.label :session_stress, "Your current stress level after completing this group session" %>
      </div>
      <div class="col-md-9">
        <%= f.range_field :session_stress, :in => 1..6, :step => '.1' %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :id, :value => group_session_mood_detail.id %>
  <%= f.submit "Continue", :class => "form-control btn btn-primary btn-lg" %>
<%end%>
<script>
  $( document ).ready(function() {

    $.each($('[type="range"]'), function (index, el){

      customSlider($(el));

    });

  });
</script>