<h1>Using the following scale, rate your stress level right now before you practice your relaxation session</h1>

<%= form_for DailyRelaxationSession.new, url: create_path, :html => {:role => "form"} do |f| %>

  <div class="form-group">
    <div class="row form-labels">
      <div class="col-md-4"><span class="form-label-text">No Stress</span></div>
      <div class="col-md-4"><span class="form-label-text">Moderately Stressed</span></div>
      <div class="col-md-4"><span class="form-label-text">Extremely Stressed</span></div>
    </div>
    <%= f.range_field :pre_stress, :in => 0..4, :step => '1', :id => "range" %>
    <%= f.submit "Continue", :class => "form-control btn btn-primary btn-lg" %>
  </div>
<%end%>
<script>
 $(document).ready(function() {
    customSlider($('#range'));
  });
</script>