<h1>Using the following scale, rate your stress level right now before you practice your relaxation session</h1>

<%= form_for DailyRelaxationSession.new, url: create_path, :html => {:role => "form"} do |f| %>

  <div class="form-group" style="background-color:white;padding:15px;border-radius:3px;">
  <div class="row form-labels">
    <div class="col-md-4">No Stress</div>
    <div class="col-md-4">Moderately Stressed</div>
    <div class="col-md-4">Extremely Stressed</div>
  </div>
    <%= f.range_field :pre_stress, :in => 0..10, :step => '1', :id => "range" %><Br/>
    <%= f.submit "Continue", :class => "form-control btn btn-primary" %>
  </div>
<%end%>
<script>
 $(document).ready(function() {
  $('#range').ionRangeSlider({
    min:0,
    max:10,
    type:"single",
    step:1,
    hasGrid:true
  });
});
</script>